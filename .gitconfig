[include]
	path = ~/.config/lazygit/delta.colors.gitconfig

[delta]
	#features = villsau
	#features = chameleon
	#features = mellow-barbet
	#features = arctic-fox
	features = arctic-fox-mine

[user]
	name = Michał Łyszczek
	email = michal.lyszczek@bofc.pl

[diff]
	tool = vimdiff

[core]
	editor = vim
	trustctime = false
	preloadindex = true

[web]
	browser = chromium

[color]
	ui = auto

[color "branch"]
	current = yellow bold
	local = green bold
	remote = cyan bold

[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
	whitespace = red reverse

[color "status"]
	added = green bold
	changed = yellow bold
	untracked = red bold

[mergetool]
	trustExitCode = true

[gitreview]
	remote = origin

[format]
	signoff = true

[blame]
	coloring = highlightRecent

[init]
	defaultBranch = master

[pull]
	ff = only
[safe]
	directory = *
[merge]
	tool = nvimdiff
[filter "lfs"]
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
